@model IEnumerable<CartItem>

<h2>Checkout</h2>

<table>
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total</th>
    </tr>
    @foreach (CartItem c in Model)
    {
        <tr>
            <td>@c.Product.ProductName</td>
            <td>@c.Quantity</td>
            <td>@c.Product.UnitPrice</td>
            <td>@(c.Product.UnitPrice* c.Quantity)</td>
        </tr>
    }
</table>

<h3>Grand Total: $(c.Product.UnitPrice* c.Quantity)</h3>

<form method="post" action="@Url.Action("CompleteCheckout", "Checkout")">
    <label for="DiscountCode">Discount Code:</label>
    <input type="text" name="DiscountCode" />
    <button type="submit">Apply & Checkout</button>
</form>